<component name="channel" type="synapse/template">
    <subComponents>
        <component name="createChannel">
            <file>createChannel.xml</file>
            <description>Creates a channel in the Slack workspace.</description>
        </component>
        <component name="inviteUserToChannel">
            <file>inviteUserToChannel.xml</file>
            <description>Invites a user to a channel. The calling user must be a member of the channel.</description>
        </component>
        <component name="joinToChannel">
            <file>joinToChannel.xml</file>
            <description>Joins a channel, creating it if needed.</description>
        </component>
        <component name="leaveFromChannel">
            <file>leaveFromChannel.xml</file>
            <description>Leaves a channel.</description>
        </component>
        <component name="removeUserFromChannel">
            <file>removeUserFromChannel.xml</file>
            <description>Removes a user from a channel. This method allows a user to remove another member from a team
                channel.
            </description>
        </component>
    </subComponents>
</component>
